<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SevenDayDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/citydetails"
        android:visibility="gone"
        >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/city"
       android:paddingTop="20dp"
       android:background="#33039BE5"
       android:orientation="horizontal"
       android:paddingBottom="30dp"
       >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:background="@android:color/transparent"
            android:id="@+id/back__"
            android:src="@drawable/blackback_"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/txt_city_name__"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="London,GB"
            android:textColor="#000000"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textAlignment="center"

            />
    </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/next"
        android:background="#33039BE5"
        android:layout_below="@+id/city"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next 7 Days"
            android:textColor="#000000"
            android:paddingBottom="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            />
    </LinearLayout>
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:weightSum="4"
      android:id="@+id/next_"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="20dp"
      android:background="#33039BE5"
      android:layout_below="@id/next"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_weight="0.7">
      <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:id="@+id/dailyimage_"/>
      </LinearLayout>
      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1.9"
          android:textColor="#000000"
          android:textSize="16sp"
          android:id="@+id/detsilsdate_"
          android:textStyle="bold"
          android:layout_gravity="center_vertical"
          android:text="Thurday"/>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1.4"
          android:gravity="right"
          android:layout_gravity="center_vertical"
          android:orientation="horizontal">
          <TextView
              android:id="@+id/daytemperature"
              android:layout_width="wrap_content"
              android:text="12c"
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="20sp"
              android:gravity="end"
              android:textStyle="bold"
              android:paddingRight="10dp"
              android:layout_height="wrap_content"
              tools:ignore="RtlCompat" />
          <TextView
              android:id="@+id/nighttemperature"
              android:layout_width="wrap_content"
              android:text="12c"
              android:textColor="@color/transparentBlack"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:gravity="end"
              android:textAlignment="center"
              android:textSize="20sp"
              tools:ignore="RtlCompat" />

      </LinearLayout>
  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/next__"
        android:layout_below="@+id/next_"
        android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#E6000000"></View>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:background="#33039BE5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sunrise"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feels Like"
            android:id="@+id/sunrise_"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/transparentBlack"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sunset"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sunset"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/sunset_"
            android:textColor="@color/transparentBlack"
            android:textSize="15sp"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="30dp"
        android:paddingRight="20dp"
        android:id="@+id/nextlinear"
        android:background="#33039BE5"
        android:layout_below="@+id/next__"
        android:orientation="horizontal"
        android:weightSum="4">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Humidity"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="90"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/dailyhumidity"
            android:textColor="@color/transparentBlack"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pressure"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feels Like"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/dailypressure"
            android:textColor="@color/transparentBlack"
            android:textSize="15sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextlinear">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/weekdaily_"
            android:background="#fff"
            android:orientation="vertical">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/loading3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true">
    </ProgressBar>
</RelativeLayout>