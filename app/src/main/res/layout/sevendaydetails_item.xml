<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:id="@+id/next_"
        android:paddingBottom="13dp"
        android:paddingLeft="10dp"
        android:paddingTop="13dp"
        android:orientation="horizontal"
       >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/dailynextimage_"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.7"
            android:textColor="#000000"
            android:autoSizeMaxTextSize="16sp"
            android:layout_gravity="center_vertical"
            android:id="@+id/detsilsnextdate_"
            android:text="kll"/>
        <TextView
            android:id="@+id/daynexttemperature"
            android:layout_width="0dp"
            android:text="12c"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:autoSizeMaxTextSize="16sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"/>
        <TextView
            android:id="@+id/nightnexttemperature"
            android:layout_width="0dp"
            android:text="12c"
            android:layout_gravity="center_vertical"
            android:textColor="@color/transparentBlack"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:autoSizeMaxTextSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/transparentBlack"></View>

</LinearLayout>
